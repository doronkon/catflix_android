<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.EditAndDeleteCategory">

    <!-- Header Container -->
    <FrameLayout
        android:id="@+id/header_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Spinner
        android:id="@+id/dropdownList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:prompt="@string/select_option"/>
    <Button
        android:id="@+id/deleteSelectedCategoryBTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete selected Category"/>

    <Button
        android:id="@+id/editSelectedCategoryBTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit selected Category"/>

</LinearLayout>
