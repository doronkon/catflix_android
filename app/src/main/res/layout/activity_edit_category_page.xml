<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="?attr/android:windowBackground"
    tools:context=".Activities.EditCategoryPageActivity">

    <!-- Header Bar -->
    <RelativeLayout
        android:id="@+id/header_container"
        android:layout_width="match_parent"
        android:layout_height="193dp"
        android:background="?attr/android:windowBackground"
        android:padding="16dp">

        <!-- Home Link -->
        <TextView
            android:id="@+id/home_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:text="Home"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <!-- Admin Link -->
        <TextView
            android:id="@+id/admin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@id/home_link"
            android:text="Admin"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <!-- Profile Image -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imageView2"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@id/admin"
            android:src="@drawable/profile_placeholder" />

        <!-- Logout Button (Aligned to the Right) -->
        <Button
            android:id="@+id/logoutBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:backgroundTint="@color/red"
            android:padding="8dp"
            android:text="Logout"
            android:textColor="#FFFFFF" />
    </RelativeLayout>

    <!-- Category Name Text -->
    <TextView
        android:id="@+id/categoryName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Category Name"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp" />

    <!-- EditText for new category name -->
    <EditText
        android:id="@+id/newCategoryName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="Enter new category name"
        android:inputType="text"
        android:padding="16dp"
        android:textColorHint="#FFFFFF"
        android:backgroundTint="#1E1E1E"
        android:textColor="#FFFFFF"/>

    <!-- Dropdown Spinner -->
    <Spinner
        android:id="@+id/booleanSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:backgroundTint="#1E1E1E"
        android:popupBackground="#1E1E1E"
        android:textColor="#FFFFFF"
        android:fontFamily="sans-serif"/>

    <!-- Edit Button -->
    <Button
        android:id="@+id/editSelectedCategoryBTN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edit"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:padding="12dp"
        android:textColor="#FFFFFF"
        android:backgroundTint="#D32F2F"
        android:layout_marginTop="20dp" />

</LinearLayout>