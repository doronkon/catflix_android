<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Header Container (Fixed at the Top) -->
    <LinearLayout
        android:id="@+id/header_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:background="#1A1A1A"
        android:layout_alignParentTop="true"/> <!-- Fix header at the top -->

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header_container"> <!-- Place below header -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/textViewEditingMovie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="You are editing: "
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"/>

            <EditText
                android:id="@+id/editTextName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Name"
                android:inputType="text" />

            <EditText
                android:id="@+id/editTextDirector"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Director"
                android:inputType="text" />

            <EditText
                android:id="@+id/editTextActors"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Actors"
                android:inputType="text" />

            <EditText
                android:id="@+id/editTextDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Description"
                android:inputType="textMultiLine" />

            <EditText
                android:id="@+id/editTextMinimalAge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Minimal Age"
                android:inputType="number" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Catflix Original:" />

            <RadioGroup
                android:id="@+id/radioGroupCatflixOriginal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radioTrue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="True" />

                <RadioButton
                    android:id="@+id/radioFalse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="False" />

            </RadioGroup>

            <!-- Category Selection -->
            <Spinner
                android:id="@+id/dropdownList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:spinnerMode="dropdown"
                android:layout_marginTop="20dp"
                android:padding="12dp"
                android:popupBackground="#1E1E1E"
                android:background="@drawable/spinner_background"
                android:dropDownVerticalOffset="70dp"
                android:dropDownHorizontalOffset="5dp"
                android:textColorHint="#FFFFFF"
                android:fontFamily="sans-serif" />

            <!-- Upload Buttons -->
            <Button
                android:id="@+id/buttonUploadThumbnail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Upload Thumbnail" />

            <Button
                android:id="@+id/buttonUploadVideo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Upload Video" />

            <Button
                android:id="@+id/buttonUploadMovie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Edit Movie" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
