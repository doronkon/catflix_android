<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="?attr/android:windowBackground"> <!-- Custom Background -->

    <!-- Header Container -->

    <!-- Scrollable Content -->

    <RelativeLayout
        android:id="@+id/header_container"
        android:layout_width="395dp"
        android:layout_height="179dp"
        android:background="?attr/android:windowBackground"
        android:padding="16dp">

        <!-- Home Link -->
        <TextView
            android:id="@+id/home_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:text="Home"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <!-- Admin Link -->
        <TextView
            android:id="@+id/admin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@id/home_link"
            android:text="Admin"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <!-- Profile Image -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imageView2"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@id/admin"
            android:src="@drawable/profile_placeholder" />

        <!-- Logout Button (Aligned to the Right) -->
        <ImageButton
            android:id="@+id/logoutBtn"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Logout"
            android:src="@android:drawable/ic_lock_power_off"
            />
    </RelativeLayout>

    <ScrollView
        android:layout_width="482dp"
        android:layout_height="883dp"
        android:layout_below="@id/header_container"
        android:layout_marginTop="35dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/cetflixblack"
            android:orientation="vertical"
            android:padding="16dp"> <!-- Semi-transparent background -->

            <EditText
                android:id="@+id/editTextName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Name"
                android:inputType="text"
                android:textColor="@color/white"
                android:textColorHint="@color/gray"
                android:background="@drawable/edittext_bg"
                android:padding="12dp"
                android:gravity="center_vertical"/>

            <EditText
                android:id="@+id/editTextDirector"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Director"
                android:inputType="text"
                android:textColor="@color/white"
                android:textColorHint="@color/gray"
                android:background="@drawable/edittext_bg"
                android:padding="12dp"
                android:gravity="center_vertical"/>

            <EditText
                android:id="@+id/editTextActors"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Actors"
                android:inputType="text"
                android:textColor="@color/white"
                android:textColorHint="@color/gray"
                android:background="@drawable/edittext_bg"
                android:padding="12dp"
                android:gravity="center_vertical"/>

            <EditText
                android:id="@+id/editTextDescription"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:hint="Description"
                android:inputType="textMultiLine"
                android:textColor="@color/white"
                android:textColorHint="@color/gray"
                android:background="@drawable/edittext_bg"
                android:padding="12dp"
                android:gravity="top"/>

            <EditText
                android:id="@+id/editTextMinimalAge"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Minimal Age"
                android:inputType="number"
                android:textColor="@color/white"
                android:textColorHint="@color/gray"
                android:background="@drawable/edittext_bg"
                android:padding="12dp"
                android:gravity="center_vertical"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Catflix Original:"
                android:textColor="?attr/colorOnPrimary"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <RadioGroup
                android:id="@+id/radioGroupCatflixOriginal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radioTrue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="True"
                    android:textColor="?attr/colorOnPrimary"/>

                <RadioButton
                    android:id="@+id/radioFalse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="False"
                    android:textColor="?attr/colorOnPrimary"/>
            </RadioGroup>

            <Spinner
                android:id="@+id/dropdownCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/spinner_background"
                android:dropDownHorizontalOffset="5dp"
                android:dropDownVerticalOffset="0dp"
                android:fontFamily="sans-serif"
                android:padding="12dp"
                android:popupBackground="#1E1E1E"
                android:spinnerMode="dropdown"
                android:textColorHint="#FFFFFF" />

            <Button
                android:id="@+id/buttonUploadThumbnail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:backgroundTint="#D32F2F"
                android:text="Upload Thumbnail"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/buttonUploadVideo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:backgroundTint="#D32F2F"
                android:text="Upload Video"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/buttonUploadMovie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:backgroundTint="#D32F2F"
                android:text="Upload Movie"
                android:textColor="#FFFFFF" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>