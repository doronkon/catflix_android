<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/cetflixblack"> <!-- Custom Background -->

    <!-- Header Container -->
    <LinearLayout
        android:id="@+id/header_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:background="#1A1A1A"
        android:layout_alignParentTop="true">

    </LinearLayout>

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header_container">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@color/cetflixblack"> <!-- Semi-transparent background -->

            <EditText
                android:id="@+id/editTextName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Name"
                android:background="#333333"
                android:textColor="#FFFFFF"
                android:padding="12dp"
                android:inputType="text" />

            <EditText
                android:id="@+id/editTextDirector"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Director"
                android:background="#333333"
                android:textColor="#FFFFFF"
                android:padding="12dp"
                android:inputType="text" />

            <EditText
                android:id="@+id/editTextActors"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Actors"
                android:background="#333333"
                android:textColor="#FFFFFF"
                android:padding="12dp"
                android:inputType="text" />

            <EditText
                android:id="@+id/editTextDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Description"
                android:background="#333333"
                android:textColor="#FFFFFF"
                android:padding="12dp"
                android:inputType="textMultiLine" />

            <EditText
                android:id="@+id/editTextMinimalAge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Minimal Age"
                android:background="#333333"
                android:textColor="#FFFFFF"
                android:padding="12dp"
                android:inputType="number" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Catflix Original:"
                android:textColor="#FFFFFF" />

            <RadioGroup
                android:id="@+id/radioGroupCatflixOriginal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radioTrue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="True"
                    android:textColor="#FFFFFF" />

                <RadioButton
                    android:id="@+id/radioFalse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="False"
                    android:textColor="#FFFFFF" />
            </RadioGroup>

            <Spinner
                android:id="@+id/dropdownCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:spinnerMode="dropdown"
                android:layout_marginTop="20dp"
                android:padding="12dp"
                android:popupBackground="#1E1E1E"
                android:background="@drawable/spinner_background"
                android:dropDownVerticalOffset="70dp"
                android:dropDownHorizontalOffset="5dp"
                android:textColorHint="#FFFFFF"
                android:fontFamily="sans-serif" />

            <Button
                android:id="@+id/buttonUploadThumbnail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Upload Thumbnail"
                android:backgroundTint="#D32F2F"
                android:textColor="#FFFFFF"/>

            <Button
                android:id="@+id/buttonUploadVideo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Upload Video"
                android:backgroundTint="#D32F2F"
                android:textColor="#FFFFFF"/>

            <Button
                android:id="@+id/buttonUploadMovie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Upload Movie"
                android:backgroundTint="#D32F2F"
                android:textColor="#FFFFFF"/>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>