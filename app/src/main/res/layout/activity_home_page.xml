<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cetflixblack">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- Header Container -->
        <LinearLayout
            android:id="@+id/header_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp"
            android:background="#1A1A1A">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:contentDescription="App Logo"
                android:layout_marginEnd="16dp"
                android:src="@drawable/catflix_logo" />

            <TextView
                android:id="@+id/appTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:text="Catflix"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

            <Button
                android:id="@+id/switchThemeButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:text="Switch to Light Mode"
                android:textColor="#000000"
                android:backgroundTint="@color/white"/>

            <!--                android:layout_marginStart="auto"-->
<!--                android:background="@drawable/button_background"-->
        </LinearLayout>

        <!-- Banner Section -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="8dp">

            <VideoView
                android:id="@+id/videoBanner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/banner_placeholder"
                android:contentDescription="Featured Content"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_gravity="end|center_vertical"
                android:background="#99000000"
                android:padding="16dp"
                android:layout_marginEnd="16dp">

                <TextView
                    android:id="@+id/bannerText"
                    android:layout_width="wrap_content"
                    android:layout_height="72dp"
                    android:ellipsize="end"
                    android:maxLines="3"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/playButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:backgroundTint="#D32F2F"
                    android:text="Play Now"
                    android:textColor="#FFFFFF" />
            </LinearLayout>
        </FrameLayout>

        <!-- Promoted Categories -->
        <TextView
            android:layout_width="112dp"
            android:layout_height="41dp"
            android:layout_margin="16dp"
            android:fontFamily="sans-serif-medium"
            android:text="Categories"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/categoryRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />

        <!-- Watch Again Section -->
        <TextView
            android:layout_width="112dp"
            android:layout_height="40dp"
            android:layout_margin="16dp"
            android:fontFamily="sans-serif-medium"
            android:text="Watch Again"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/movieList"
            android:layout_width="match_parent"
            android:layout_height="200dp" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>