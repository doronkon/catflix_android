<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="?attr/android:windowBackground"
    tools:context=".Activities.AdminPageActivity">

    <!-- Header Container -->

    <RelativeLayout
        android:id="@+id/header_container"
        android:layout_width="match_parent"
        android:layout_height="193dp"
        android:background="?attr/android:windowBackground"
        android:padding="16dp">

        <!-- Home Link -->
        <TextView
            android:id="@+id/home_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:text="Home"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <!-- Admin Link -->
        <TextView
            android:id="@+id/admin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@id/home_link"
            android:text="Admin"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <!-- Profile Image -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imageView2"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@id/admin"
            android:src="@drawable/profile_placeholder" />

        <!-- Logout Button (Aligned to the Right) -->
        <Button
            android:id="@+id/logoutBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:backgroundTint="@color/red"
            android:padding="8dp"
            android:text="Logout"
            android:textColor="#FFFFFF" />
    </RelativeLayout>

    <!-- Button to Delete Movie -->

    <TextView
        android:id="@+id/header_title"
        android:layout_width="335dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="37dp"
        android:layout_marginBottom="16dp"
        android:background="#D32F2F"
        android:gravity="center"
        android:padding="16dp"
        android:text="Admin Controls"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/toDeleteMovieBTN"
        android:layout_width="343dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="12dp"
        android:backgroundTint="#D32F2F"
        android:elevation="4dp"
        android:fontFamily="sans-serif"
        android:padding="12dp"
        android:text="Delete/Edit Movie"
        android:textColor="#FFFFFF"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/toEditOrDeleteCategory"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="12dp"
        android:backgroundTint="#D32F2F"
        android:elevation="4dp"
        android:fontFamily="sans-serif"
        android:padding="12dp"
        android:text="Edit/Delete Category"
        android:textColor="#FFFFFF"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/toUploadCategory"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="12dp"
        android:backgroundTint="#D32F2F"
        android:elevation="4dp"
        android:fontFamily="sans-serif"
        android:padding="12dp"
        android:text="Upload Category"
        android:textColor="#FFFFFF" />

    <!-- Button to Delete Movie -->
    <Button
        android:id="@+id/toUploadMovie"
        android:layout_width="343dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="12dp"
        android:backgroundTint="#D32F2F"
        android:elevation="4dp"
        android:fontFamily="sans-serif"
        android:padding="12dp"
        android:text="Upload Movie"
        android:textColor="#FFFFFF" />

</LinearLayout>