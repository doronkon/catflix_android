<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:background="#090808">

    <!-- Logo Image -->
    <ImageView
        android:id="@+id/logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/catflix_logo"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:contentDescription="App Logo" />

    <!-- Home Link -->
    <TextView
        android:id="@+id/home_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home"
        android:textSize="18sp"
        android:textColor="#AF1D1D"
        android:layout_toEndOf="@id/logo"
        android:layout_marginStart="16dp"
        android:layout_centerVertical="true"/>


    <!-- Admin Link -->
    <TextView
        android:id="@+id/admin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Admin"
        android:textSize="18sp"
        android:textColor="#AF1D1D"
        android:layout_toEndOf="@id/home_link"
        android:layout_marginStart="16dp"
        android:layout_centerVertical="true"/>

    <!-- Spinner (Now Below Admin) -->
    <Spinner
        android:id="@+id/dropdownList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:spinnerMode="dropdown"
        android:prompt="@string/select_option"
        android:layout_below="@id/admin"
        android:layout_marginTop="16dp"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageView2"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/transparent"
        android:scaleType="centerCrop"
        android:src="@drawable/profile_placeholder"
        android:layout_toEndOf="@id/admin"
        android:layout_marginStart="16dp"
        android:layout_centerVertical="true"
        app:strokeWidth="2dp"
        app:strokeColor="@android:color/black"
        app:shapeAppearanceOverlay="@style/RoundImage"/>

    <Button

        android:id="@+id/logoutBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:text="Logout"
        android:layout_toEndOf="@id/imageView2"
        />


</RelativeLayout>